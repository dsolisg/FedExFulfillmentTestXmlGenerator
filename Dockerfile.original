# Dockerfile (place at repo root)
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy csproj and restore (adjust project filename if different)
COPY ["FulfillmentTestXmlGenerator.csproj", "./"]
RUN dotnet restore "./FulfillmentTestXmlGenerator.csproj"

# Copy everything and publish
COPY . .
RUN dotnet publish "FulfillmentTestXmlGenerator.csproj" -c Release -o /app/publish

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS final
WORKDIR /app
COPY --from=build /app/publish .
ENV ASPNETCORE_URLS=http://+:80
ENTRYPOINT ["dotnet", "FulfillmentTestXmlGenerator.dll"]